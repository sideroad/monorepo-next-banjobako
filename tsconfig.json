{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "noImplicitAny": false,
    "outDir": "./dist",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "moduleResolution": "node",
    "paths": {
      "~/components/*": ["components/*"],
      "~/reducers/*": ["reducers/*"]
    }
  },
  "include": [
    "apps/**/*"
  ],
  "typeRoots":[
    "node_modules/@types",
    "types"
  ]
}