{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "shared"
    ]
  },
  "scripts": {
    "create-app": "node bin/create-app.js",
    "apply-firebase": "node bin/apply-firebase.js",
    "lint": "eslint apps/**/*.{js,ts,tsx}",
    "test": "lerna exec -- yarn test",
    "lint-staged": "lint-staged",
    "postinstall": "vscode-extension-install",
    "clean": "rm -Rf node_modules && rm -Rf apps/*/node_modules && rm -Rf shared/node_modules && yarn"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "browserslist": [
    "last 1 version",
    "> 1%",
    "maintained node versions",
    "not dead"
  ],
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.6.0",
    "@sideroad/vscode-extension-install": "^2.1.2",
    "@types/jest": "^24.0.18",
    "@types/klaw-sync": "^6.0.0",
    "@types/next": "^8.0.6",
    "@types/node": "12.7.11",
    "@types/qs": "^6.5.3",
    "@types/react": "^16.9.3",
    "@types/react-dom": "16.9.1",
    "@types/react-test-renderer": "^16.9.0",
    "@types/styled-jsx": "^2.2.8",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "babel-jest": "^24.9.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "cypress": "^3.4.1",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.15.0",
    "fs-extra": "^8.1.0",
    "hygen": "^4.0.9",
    "jest": "^24.9.0",
    "klaw-sync": "^6.0.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.4.1",
    "npm-watch": "^0.6.0",
    "opts": "^1.2.6",
    "pre-commit": "^1.2.2",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.10.2",
    "replace-in-file": "^4.1.3",
    "shortid": "^2.2.15",
    "ts-jest": "^24.1.0",
    "typescript": "3.6.3"
  },
  "sideEffects": false
}
